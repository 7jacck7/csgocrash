var players = 0;
var msg1 = "In this round people lost their bets";
var joke = 0;
rounds = 0;
engine.on('player_bet', function(data) {
    console.log('The player ', data.steamid, data.nickname, ' placed a bet. Counting + 1')
players += 1;
});
engine.on('cashed_out', function(resp) {
    console.log('The player ', resp.steamid, resp.nickname, ' cashed out. Counting - 1');
players -= 1;
});
engine.on('game_crash', function(data) {
    console.log('Game crashed at ', data.game_crash);
console.log('Bets lost: ',players);
msg1 = "This round "+players.toString()+" people lost their bets";
rounds +=1
console.log(rounds)
	if (rounds >=7){
